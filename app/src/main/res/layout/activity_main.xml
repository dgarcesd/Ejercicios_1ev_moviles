<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/rellay_calculadora"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:layout_margin="6dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@color/red">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/imgCalculadora"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_calculadora"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:padding="8dp"
                                android:layout_centerHorizontal="true"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Calculadora"
                                android:layout_below="@+id/imgCalculadora"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="5dp"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rellay_superheroes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:layout_margin="6dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@color/yellow">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/imgSuperHeroes"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_amigos"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:padding="8dp"
                                android:layout_centerHorizontal="true"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Registro SuperHeroes"
                                android:layout_below="@+id/imgSuperHeroes"
                                android:layout_centerHorizontal="true"
                                android:textAlignment="center"
                                android:layout_marginTop="5dp"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/rellay_edad_canina"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:layout_margin="6dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@color/lime">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/imgPerretes"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_edad_canina"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:padding="8dp"
                                android:layout_centerHorizontal="true"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Edad Canina"
                                android:layout_marginTop="5dp"
                                android:layout_below="@+id/imgPerretes"
                                android:layout_centerHorizontal="true"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rellay_quizzes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:layout_margin="6dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@color/green">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/imgQuizzes"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_quizzes"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:padding="8dp"
                                android:layout_centerHorizontal="true"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Quizzes"
                                android:layout_marginTop="5dp"
                                android:layout_below="@+id/imgQuizzes"
                                android:layout_centerHorizontal="true"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/rellay_galeria"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:layout_margin="6dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@color/blue">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/imgGaleria"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_gallery"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:padding="8dp"
                                android:layout_centerHorizontal="true"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Galeria de Fotos"
                                android:layout_marginTop="5dp"
                                android:layout_below="@+id/imgGaleria"
                                android:layout_centerHorizontal="true"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rellay_mapas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:layout_margin="6dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@color/darkblue">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/imgMapas"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_mapas"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:padding="8dp"
                                android:layout_centerHorizontal="true"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mapas"
                                android:layout_marginTop="5dp"
                                android:layout_below="@+id/imgMapas"
                                android:layout_centerHorizontal="true"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:id="@+id/rellay_restaurantes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:layout_margin="6dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@color/darkviolet">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/imgRestaurantes"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_restaurants"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:padding="8dp"
                                android:layout_centerHorizontal="true"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Restaurantes"
                                android:layout_marginTop="5dp"
                                android:layout_below="@+id/imgRestaurantes"
                                android:layout_centerHorizontal="true"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/rellay_settings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:layout_margin="6dp"
                        android:clickable="true"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@color/violet">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true">

                            <ImageView
                                android:id="@+id/imgSettings"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:src="@drawable/ic_herramientas"
                                android:adjustViewBounds="true"
                                android:scaleType="centerInside"
                                android:padding="8dp"
                                android:layout_centerHorizontal="true"
                                app:tint="@color/white" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Herramientas"
                                android:layout_marginTop="5dp"
                                android:layout_below="@+id/imgSettings"
                                android:layout_centerHorizontal="true"
                                android:textSize="16sp" />
                        </RelativeLayout>
                    </RelativeLayout>

                </LinearLayout>


            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>
</layout>